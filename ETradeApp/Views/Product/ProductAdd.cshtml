@{ 
    var categoryListItem = ViewBag.Catagories as List<SelectListItem>;
}
    <div class="container">
        <div class="mb-4">
            <h1 class="text-center">Ürün Ekle</h1>
        </div>
        @using (Html.BeginForm("ProductAdd", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="row">
                <div class="col-lg-12 order-lg-1">
                    <div class="pb-7 mb-7">
                        <!-- Billing Form -->
                        <div class="row">
                            <div class="col-md-6">
                                <!-- Input -->
                                <div class="js-form-message mb-6">
                                    <label class="form-label">
                                        Ürün Adı
                                        <span class="text-danger">*</span>
                                    </label>
                                    <input type="text" class="form-control" name="ProductName" placeholder="Ürün Adı Giriniz..." aria-label="Jack" required="" data-msg="Lütfen ürün adı giriniz." data-error-class="u-has-error" data-success-class="u-has-success" autocomplete="off">
                                </div>
                                <!-- End Input -->
                            </div>

                            <div class="col-md-6">
                                <!-- Input -->
                                <div class="js-form-message mb-6">
                                    <label class="form-label">
                                        Kategori
                                        <span class="text-danger">*</span>
                                    </label>
                                    @Html.DropDownList("CategoryId", categoryListItem, htmlAttributes: new { @class = "form-control" })
                                </div>
                                <!-- End Input -->
                            </div>

                            <div class="col-md-6">
                                <!-- Input -->
                                <div class="js-form-message mb-6">
                                    <label class="form-label">
                                        Ürün Açıklaması
                                        <span class="text-danger">*</span>
                                    </label>
                                    <input type="text" class="form-control" name="ProductDescription" placeholder="Ürün Açıklaması Giriniz." aria-label="Wayley" required="" data-msg="Lütfen Ürün Açıklaması Giriniz." data-error-class="u-has-error" data-success-class="u-has-success">
                                </div>
                                <!-- End Input -->
                            </div>

                            <div class="col-md-6">
                                <!-- Input -->
                                <div class="js-form-message mb-6">
                                    <label class="form-label">
                                        Stok Miktarı
                                    </label>
                                    <input type="text" class="form-control" name="StockAmount" placeholder="Stok Miktarı Giriniz" aria-label="Company Name" data-msg="Lütfen Stok Miktarı Giriniz." data-error-class="u-has-error" data-success-class="u-has-success">
                                </div>
                                <!-- End Input -->
                            </div>

                            <div class="col-md-6">
                                <!-- Input -->
                                <div class="js-form-message mb-6">
                                    <label class="form-label">
                                        Birim Fiyatı
                                        <span class="text-danger">*</span>
                                    </label>
                                    <input type="text" class="form-control" name="UnitPrice" placeholder="Birim Fiyatı Giriniz." aria-label="470 Lucy Forks" required="" data-msg="Lütfen Birim Fiyatı Giriniz." data-error-class="u-has-error" data-success-class="u-has-success">
                                </div>
                                <!-- End Input -->
                            </div>

                            <div class="col-md-8">
                                <!-- Input -->
                                <div class="js-form-message mb-6">
                                    <label class="form-label">
                                        Resim Ekle
                                    </label>
                                    <input type="file" name="photos" class="form-control" placeholder="Resim Ekle" accept=".jpg, .png," multiple>
                                </div>
                                <!-- End Input -->
                            </div>

                            <div class="col-md-8">
                                <!-- Input -->
                                <div class="js-form-message mb-3">
                                    <button type="submit" class="btn btn-success">Ekle</button>
                                </div>
                                <!-- End Input -->
                            </div>

                        </div>
                        <!-- End Billing Form -->
                    </div>
                </div>
            </div>
        }
        </div>
